SubDir ANTARES_TOP src system libroot posix ;

UsePrivateHeaders app shared [ FDirName syslog_daemon ] ;
UsePrivateSystemHeaders ;
UsePrivateHeaders kernel ;
	# For util/KMessage.h
UsePrivateHeaders libroot runtime_loader shared ;

if $(ANTARES_MULTIUSER_QUERY) = 1 {
	PWD_BACKEND = pwd_query.c ;
} else {
	PWD_BACKEND = pwd.cpp grp.cpp shadow.cpp user_group_common.cpp ;
}
MergeObject posix_main.o :
 	assert.c
 	dlfcn.c
 	dirent.c
 	errno.c
	fcntl.cpp
 	fnmatch.c
 	glob.c
 	inttypes.c
	libgen.cpp
 	poll.c
 	$(PWD_BACKEND)
 	scheduler.cpp
	semaphore.cpp
 	syslog.cpp
 	termios.c
 	utime.c
;

SubInclude ANTARES_TOP src system libroot posix arch $(TARGET_ARCH) ;

SubInclude ANTARES_TOP src system libroot posix crypt ;
