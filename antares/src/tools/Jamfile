SubDir ANTARES_TOP src tools ;

UseHeaders [ FDirName $(ANTARES_TOP) headers build private app ] : true ;
UseHeaders [ FDirName $(ANTARES_TOP) headers build private storage ] : true ;

SEARCH_SOURCE += [ FDirName $(ANTARES_TOP) src/bin ] ;

local tools =
	<build>catattr
	<build>copyattr
	<build>generate_attribute_stores
	<build>listattr
	<build>mimeset
	<build>mkindex
	<build>rm_attrs_tmp
	<build>rmattr
	<build>settype
	<build>setversion
	<build>xres
;

USES_BE_API on $(tools) = true ;

# TODO: temporary kludge
local libAntaresCompat ;
if $(HOST_PLATFORM) in r5 bone dano {
	ObjectC++Flags database_support.cpp UpdateMimeInfoThread.cpp
		MimeUpdateThread.cpp
		: -include [ FDirName $(ANTARES_TOP) headers build
			AntaresBuildCompatibility.h ] ;
	libAntaresCompat = libantarescompat_build.a ;
}

BuildPlatformMain <build>catattr : catattr.cpp : $(HOST_LIBBE) ;

UsePrivateObjectHeaders copyattr.cpp : shared : : true ;
BuildPlatformMain <build>copyattr : copyattr.cpp
	: $(HOST_LIBBE) $(HOST_LIBSTDC++) $(HOST_LIBSUPC++) ;

BuildPlatformMain <build>create_image : create_image.cpp : $(HOST_LIBSUPC++) ;

BuildPlatformMain <build>data_to_source : data_to_source.cpp
	: $(HOST_LIBSUPC++) ;

BuildPlatformMain <build>generate_attribute_stores
	: generate_attribute_stores.cpp : $(HOST_LIBBE) $(HOST_LIBSUPC++) ;

UsePrivateObjectHeaders generate_boot_screen.cpp : shared : : true ;
UsePrivateObjectHeaders ColorQuantizer.cpp : shared : : true ;
BuildPlatformMain <build>generate_boot_screen :
	generate_boot_screen.cpp
	ColorQuantizer.cpp
	: $(HOST_LIBSUPC++) $(HOST_LIBSTDC++) png z ;

BuildPlatformMain <build>listattr : listattr.cpp : $(HOST_LIBBE) ;

if $(HOST_PLATFORM_BEOS_COMPATIBLE) {
	AddResources <build>mimeset : mimeset.rdef ;
}
BuildPlatformMain <build>mimeset :
	mimeset.cpp
	Mime.cpp
	database_support.cpp
	UpdateMimeInfoThread.cpp
	MimeUpdateThread.cpp
	: $(HOST_LIBBE) $(HOST_LIBSTDC++) $(HOST_LIBSUPC++) $(libAntaresCompat)
;

BuildPlatformMain <build>mkindex : mkindex.cpp : $(HOST_LIBBE) ;

# We want rm_attrs to be self-contained, so we link against the static libroot.
HOST_LIBROOT on <build>rm_attrs_tmp = $(HOST_STATIC_LIBROOT) ;
BuildPlatformMain <build>rm_attrs_tmp : rm_attrs.cpp
	: $(HOST_LIBSUPC++) $(HOST_LIBSTDC++) ;
MakeLocateDebug <build>rm_attrs ;
File <build>rm_attrs : <build>rm_attrs_tmp ;
MODE on <build>rm_attrs = 755 ;

BuildPlatformMain <build>rmattr : rmattr.cpp : $(HOST_LIBBE) ;

BuildPlatformMain <build>set_antares_revision : set_antares_revision.cpp
	: $(HOST_LIBSTDC++) $(HOST_LIBSUPC++) ;

BuildPlatformMain <build>settype : settype.cpp : $(HOST_LIBBE)
	$(HOST_LIBSTDC++) $(HOST_LIBSUPC++) ;

BuildPlatformMain <build>setversion : setversion.cpp : $(HOST_LIBBE)
	$(HOST_LIBSTDC++) $(HOST_LIBSUPC++) $(libAntaresCompat) ;

BuildPlatformMain <build>xres : xres.cpp : $(HOST_LIBBE) $(HOST_LIBSTDC++)
	$(HOST_LIBSUPC++) ;

SEARCH on [ FGristFiles
		Mime.cpp
	] = [ FDirName $(ANTARES_TOP) src build libbe storage ] ;

SEARCH on [ FGristFiles
		UpdateMimeInfoThread.cpp MimeUpdateThread.cpp database_support.cpp
	] = [ FDirName $(ANTARES_TOP) src build libbe storage mime ] ;

SEARCH on [ FGristFiles
		ColorQuantizer.cpp
	] = [ FDirName $(ANTARES_TOP) src kits shared ] ;

SubInclude ANTARES_TOP src tools addattr ;
SubInclude ANTARES_TOP src tools anyboot ;
SubInclude ANTARES_TOP src tools bfs_shell ;
SubInclude ANTARES_TOP src tools cppunit ;
SubInclude ANTARES_TOP src tools docbook ;
SubInclude ANTARES_TOP src tools elfsymbolpatcher ;
SubInclude ANTARES_TOP src tools fixup_amiga_boot_checksum ;
SubInclude ANTARES_TOP src tools fixup_tos_boot_checksum ;
SubInclude ANTARES_TOP src tools fs_shell ;
SubInclude ANTARES_TOP src tools gensyscalls ;
SubInclude ANTARES_TOP src tools hack_coff ;
SubInclude ANTARES_TOP src tools icu ;
SubInclude ANTARES_TOP src tools keymap ;
SubInclude ANTARES_TOP src tools locale ;
SubInclude ANTARES_TOP src tools makebootable ;
SubInclude ANTARES_TOP src tools rc ;
SubInclude ANTARES_TOP src tools remote_disk_server ;
SubInclude ANTARES_TOP src tools resattr ;
SubInclude ANTARES_TOP src tools rman ;
SubInclude ANTARES_TOP src tools translation ;
SubInclude ANTARES_TOP src tools unzip ;
SubInclude ANTARES_TOP src tools vmdkimage ;
SubInclude ANTARES_TOP src tools unflatten ;
SubInclude ANTARES_TOP src tools zip ;

