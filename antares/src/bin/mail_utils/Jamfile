SubDir ANTARES_TOP src bin mail_utils ;

SetSubDirSupportedPlatformsBeOSCompatible ;

if $(TARGET_PLATFORM) != antares {
	UsePublicHeaders mail ;
}

UsePrivateHeaders mail ;

StdBinCommands
	mail2mbox.cpp
	: be
	: mail2mbox.rdef
	;
Package antares-maildaemon-cvs :
	mail2mbox :
	boot home config bin ;

StdBinCommands
	mbox2mail.cpp
	: be libmail.so
	: mbox2mail.rdef
	;
Package antares-maildaemon-cvs :
	mbox2mail :
	boot home config bin ;

StdBinCommands
	spamdbm.cpp
	: be tracker $(TARGET_LIBSTDC++) libmail.so
	: spamdbm.rdef
	;
Package antares-maildaemon-cvs :
	spamdbm : 
	boot home config bin ;
