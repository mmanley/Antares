SubDir ANTARES_TOP src tests kits game chart ;

SetSubDirSupportedPlatformsBeOSCompatible ;
AddSubDirSupportedPlatforms libbe_test ;

Application Chart :
	Chart.cpp
	ChartRender.cpp
	ChartView.cpp
	ChartWindow.cpp
	: be game $(TARGET_LIBSUPC++)
	: Chart.rdef
	;

if $(TARGET_PLATFORM) = libbe_test {
	AntaresInstall install-test-apps : $(ANTARES_APP_TEST_DIR) : Chart
		: tests!apps ;
}
