SubDir ANTARES_TOP src tests add-ons kernel network protocols ipv4 ;

SetSubDirSupportedPlatformsBeOSCompatible ;

UseLegacyHeaders network ;
UseHeaders [ FDirName $(ANTARES_TOP) headers posix ] : true ;
UsePrivateHeaders net ;

SEARCH_SOURCE += [ FDirName $(ANTARES_TOP) src add-ons kernel network protocols ipv4 ] ;

Addon <userland>ipv4 :
	ipv4.c
	: <installed-userland-networking>net_stack_tester
;

# Installation -- in the test directory for the time being
AntaresInstall install-userland-networking 
	: [ FDirName $(ANTARES_TEST_DIR) kits net userland add-ons obos_network protocols ]
	: <userland>ipv4
	: installed-userland-networking
;
