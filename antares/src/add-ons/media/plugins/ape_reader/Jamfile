SubDir ANTARES_TOP src add-ons media plugins ape_reader ;

SetSubDirSupportedPlatformsBeOSCompatible ;

UsePrivateHeaders media ;

SubDirHdrs [ FDirName $(SUBDIR) LibMonkeysAudio ] ;
SubDirHdrs [ FDirName $(SUBDIR) MAClib ] ;

Addon ape_reader :
	APEReader.cpp
	: libMonkeysAudio.a MAClib.a be libmedia.so $(TARGET_LIBSUPC++)
;

SubInclude ANTARES_TOP src add-ons media plugins ape_reader LibMonkeysAudio ;
SubInclude ANTARES_TOP src add-ons media plugins ape_reader MAClib ;
