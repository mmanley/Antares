SubDir ANTARES_TOP src add-ons media plugins avi_reader ;

SetSubDirSupportedPlatformsBeOSCompatible ;

UsePrivateHeaders media ;

SubDirHdrs [ FDirName $(SUBDIR) libOpenDML ] ;

Addon avi_reader :
	avi_reader.cpp
	:
	libopendml.a
	be libmedia.so $(TARGET_LIBSTDC++)
;

SubInclude ANTARES_TOP src add-ons media plugins avi_reader libOpenDML ;
