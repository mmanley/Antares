SubDir ANTARES_TOP src add-ons kernel drivers network wlan ralinkwifi ;

UseHeaders [ FDirName $(ANTARES_TOP) src libs compat freebsd_network compat ]
	: true ;
UseHeaders [ FDirName $(ANTARES_TOP) src libs compat freebsd_wlan ] : true ;
UsePrivateHeaders net system ;
UsePrivateKernelHeaders ;

SubDirCcFlags [ FDefines _KERNEL=1 FBSD_DRIVER=1 ] 
	-Wno-format 
	-Wno-unused 
	-Wno-uninitialized ;

UseHeaders [ FDirName $(SUBDIR) ] : true ;

SEARCH_SOURCE += [ FDirName $(SUBDIR) dev ral ] ;

KernelAddon ralinkwifi :
	if_ral_pci.c
	rt2560.c
	rt2661.c
	glue.c
	:
	libfreebsd_wlan.a
	libfreebsd_network.a
	;

ANTARES_WIFI_FIRMWARE_PACKAGE on ralinkwifi = RT61_Firmware_V1.2 ;
ANTARES_WIFI_FIRMWARE_ARCHIVE on ralinkwifi = RT61_Firmware_V1.2.zip ;
ANTARES_WIFI_FIRMWARE_DO_EXTRACT on ralinkwifi = true ;

