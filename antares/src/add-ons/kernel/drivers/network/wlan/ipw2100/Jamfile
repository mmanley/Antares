SubDir ANTARES_TOP src add-ons kernel drivers network wlan ipw2100 ;

SetSubDirSupportedPlatformsBeOSCompatible ;

KernelAddon ipw2100 :
	driver.cpp
	ipw2100.cpp
	kernel_cpp.c
	;

Package antares-ipw2100-cvs :
	ipw2100 :
	boot home config add-ons kernel drivers bin ;
Package antares-ipw2100-cvs :
	ipw2100.settings :
	boot home config settings kernel drivers sample ;
PackageDriverSymLink antares-ipw2100-cvs : net ipw2100 ;

# Note: Due to licensing restrictions, we can only distribute the archive.
# The end-user must extract and install it themselves.
ANTARES_WIFI_FIRMWARE_PACKAGE on ipw2100 = "" ;
ANTARES_WIFI_FIRMWARE_ARCHIVE on ipw2100 = ipw2100-fw-1.3.tgz ;
ANTARES_WIFI_FIRMWARE_DO_EXTRACT on ipw2100 = false ;
