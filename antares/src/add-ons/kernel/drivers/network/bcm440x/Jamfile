SubDir ANTARES_TOP src add-ons kernel drivers network bcm440x ;

SetSubDirSupportedPlatformsBeOSCompatible ;

# For ether_driver.h
UsePrivateHeaders net ;

ObjectCcFlags [ FGristFiles b44lm.o ] : -w ;

KernelAddon bcm440x :
	b44lm.c
	b44um.c
	mempool.c
	;

Package antares-networkingkit-cvs :
	bcm440x :
	boot home config add-ons kernel drivers bin ;
PackageDriverSymLink antares-networkingkit-cvs : net bcm440x ;

# Installation

AntaresInstall install-networking : /boot/home/config/add-ons/kernel/drivers/bin : 
 	bcm440x 
;

AntaresInstallRelSymLink install-networking : /boot/home/config/add-ons/kernel/drivers/dev/net : 
	<installed>bcm440x : 
	installed-symlink 
;

