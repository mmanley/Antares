SubDir ANTARES_TOP src add-ons kernel drivers network rtl8169 ;

SetSubDirSupportedPlatformsBeOSCompatible ;

# set some additional flags
SubDirCcFlags -Wall ;

# For ether_driver.h
UsePrivateHeaders net ;

KernelAddon rtl8169 :
	driver.c
	device.c
	timer.c 
	util.c
	;

Package antares-rtl8169-svn :
	rtl8169 : 
	boot home config add-ons kernel drivers bin ;
Package antares-rtl8169-svn :
	rtl8169.settings :
	boot home config settings kernel drivers sample ;
PackageDriverSymLink antares-rtl8169-svn : net rtl8169 ;

Package antares-networkingkit-cvs :
	rtl8169 :
	boot home config add-ons kernel drivers bin ;
PackageDriverSymLink antares-networkingkit-cvs : net rtl8169 ;
Package antares-networkingkit-cvs :
	rtl8169.settings :
	boot home config settings kernel drivers sample ;


# Installation

AntaresInstall install-networking : /boot/home/config/add-ons/kernel/drivers/bin : 
 	rtl8169 
;

AntaresInstallRelSymLink install-networking : /boot/home/config/add-ons/kernel/drivers/dev/net : 
	<installed>rtl8169 : 
	installed-symlink 
;

