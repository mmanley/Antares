SubDir ANTARES_TOP src add-ons accelerants neomagic ;

SetSubDirSupportedPlatformsBeOSCompatible ;

UsePrivateHeaders graphics ;
UsePrivateHeaders [ FDirName graphics neomagic ] ;
UseHeaders [ FDirName $(SUBDIR) engine ] ;

Addon neomagic.accelerant :
	Acceleration.c
	Cursor.c
	EngineManagment.c
	GetAccelerantHook.c
	GetDeviceInfo.c
	GetModeInfo.c
	GetTimingConstraints.c
	InitAccelerant.c
	Overlay.c
	ProposeDisplayMode.c
	SetDisplayMode.c
	: libneomagic_engine.a
;

Package antares-neomagic-cvs :
	neomagic.accelerant :
	boot home config add-ons accelerants ;

Depends neomagic.accelerant : neomagic ;

SubInclude ANTARES_TOP src add-ons accelerants neomagic engine ;
