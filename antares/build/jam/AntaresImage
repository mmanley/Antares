	ahci generic_ide_pci it8211 legacy_sata silicon_image_3112
	$(X86_ONLY)ide_isa
	<usb>uhci <usb>ohci <usb>ehci
	scsi_cd scsi_disk usb_disk
	intel
	bfs
;

